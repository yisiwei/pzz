<div class="page-list-bg p10 mt20 frame-border">

  <div class="mt20 ml20">
    <H4>公安部驾驶认证</H4>
  </div>
  <div class="user-cr">
    <form class="form-horizontal mt50 " role="form">

      <div class="form-group m30">
        <label for="inputMobile" class="col-xs-3 control-label cr666 f14">真实姓名：</label>
        <div class="col-xs-5">
          <input type="tel" class="form-control frame-nradius" id="user_realname" name="user_realname" placeholder="真实姓名" />
        </div>
        <span id="mobile-verify" class="col-xs-4 f12 crred control-label tl"> 
          <i class="fa fa-times-circle crred fa-lg mr5"></i>
          输入姓名
        </span>
      </div>
      <div class="form-group m30">
        <label for="inputMobile" class="col-xs-3 control-label cr666 f14">驾证号码：</label>
        <div class="col-xs-5">
          <input type="tel" class="form-control frame-nradius" id="identity_dl_no" name="identity_dl_no" placeholder="驾证号码" />
        </div>
        <span id="mobile-verify" class="col-xs-4 f12 crred control-label tl"> 
          <i class="fa fa-times-circle crred fa-lg mr5"></i>
          输入有效证件号
        </span>
      </div>
      <div class="form-group m30">
        <label for="inputMobile" class="col-xs-3 control-label cr666 f14">驾照类型：</label>
        <div class="col-xs-5">
          <select class="form-control frame-nradius" name="identity_dl_type">
            <option value="A" checked>A照</option>
            <option value="B">B照</option>
            <option value="C">C照</option>
          </select>

        </div>
        <span id="mobile-verify" class="col-xs-4 f12 crred control-label tl">
          <i class="fa fa-times-circle crred fa-lg mr5"></i>
          请选择驾照类型
        </span>
      </div>
      <div class="form-group form-group-xs ">
        <label for="nickName" class="col-xs-3 control-label f14 cr666">领驾照时间：</label>
        <div class="col-xs-2">
          <select class="form-control frame-nradius input-sm" id="sel_year" name="identity_dl_starttime"></select>
        </div>
        <div class="col-xs-2">
          <select id="sel_month" class="form-control input-sm frame-nradius"></select>
        </div>
        <div class="col-xs-2">
          <select id="sel_day" class="form-control input-sm frame-nradius"></select>
        </div>
        <span id="mobile-verify" class="col-xs-3 f12 crred control-label tl">
          <i class="fa fa-times-circle crred fa-lg mr5"></i>
          请选择请选
        </span>
      </div>

      <div class="form-group form-group-sm ">
        <label for="nickName" class="col-xs-3 control-label cr666 f14">驾驶证照：</label>
        <div class="col-xs-5">
          <input type="file" name="identity_dl_image">
        </div>
        <span id="mobile-verify" class="col-xs-4 f12 crred control-label tl">
          <i class="fa fa-times-circle crred fa-lg mr5"></i>
          输入有效身份证
        </span>
      </div>
      <div class="form-group">
        <div class="col-xs-offset-3">
          <div class="col-xs-4">
            <a class="com-rposition"  data-toggle="modal" data-target=".bs-example-modal-sm" >
              <i  class="fa fa-search module-identif-i"></i>
            </a>
            <img class="module-identif-driversimg" src="images/driver2.jpg" />
          </div>
        </div>
      </div>
      
      <div class="modal fade bs-example-modal-sm" id="mymodal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
              </button>
              <h4 class="modal-title">行驶证样本</h4>
            </div>
            <div class="modal-body text-center">
              <img class="module-identif-driverimg" src="images/driver2.jpg">
            </div>
          </div> 
        </div>
      </div>

      <div class="form-group mt20">
        <div class="col-xs-offset-3 col-xs-9">
          <button type="button" id='identity-driver-btn' class="btn btn-primary p10 frame-nradius btn-sm">确认</button>
          <button type="reset" class="btn btn-sm btn-default p10 frame-nradius ">重置</button>
        </div>
      </div>
    </form>
  </div>
</div>