<div class="page-list-bg p10 mt20 frame-border">

  <div class="mt20 ml20">
    <h4>公安部实名认证</h4>
  </div>
  <div class="user-cr">
    <form class="form-horizontal mt50 " role="form">

      <div class="form-group m30">
        <label for="inputMobile" class="col-xs-3 control-label cr666 f14">真实姓名：</label>
        <div class="col-xs-5">
          <input type="tel" class="form-control frame-nradius" id="identity_realname" name="identity_realname" placeholder="真实姓名">
        </div>
        <span id="realname-name-msg" class="col-xs-4 f12 crred control-label tl"> 
          
        </span>
      </div>
      <div class="form-group">
        <span for="nickName" class="col-xs-offset-3 col-xs-9 cr999 f12">请输入您的真实姓名，例如：张三</span>
      </div>
      <div class="form-group">
        <label for="nickName" class="col-xs-3 control-label cr666 f14">性别：</label>
        <div class="col-xs-5">
          <label class="radio-inline">
            <input type="radio" name="identity_gender" value="0" checked>男</label>
          <label class="radio-inline">
            <input type="radio" name="identity_gender" value="1">女</label>
        </div>
      </div>
      <div class="form-group m30">
        <label for="inputMobile" class="col-xs-3 control-label cr666 f14">身份证号：</label>
        <div class="col-xs-5">
          <input type="tel" class="form-control frame-nradius" id="identity_card_no" name="identity_card_no" placeholder="身份证号"></div>
        <span id="realname-card_no-msg" class="col-xs-4 f12 crred control-label tl">
          
        </span>
      </div>
      <div class="form-group">
        <span for="nickName" class="col-xs-offset-3 col-xs-9 cr999 f12">请输入您的身份证号码，例如：500226194506213254</span>
      </div>
      <div class="form-group form-group-sm ">
        <label for="nickName" class="col-xs-3 control-label cr666 f14">身份证扫描件：</label>
        <div class="col-xs-5">
          <input type="file" id="identity_card_image" name="identity_card_image" onchange="loadCardImage(this.id)" />
        </div>
        <span id="realname-card_image-msg" class="col-xs-4 f12 crred control-label tl">
        </span>
      </div>
      <div class="form-group">
        <img id="card-image" src="" style="display:none;"/>
        <span for="nickName" class="col-xs-offset-3 col-xs-5 cr999 f12">
          实名认证、合法有效的车辆行驶证、车辆登记证的扫描件、照片等电子资料。实名认证、合法有效的车辆行驶证、车辆登记证的扫描件、照片等电子资料。
        </span>
      </div>
      <div class="form-group">
        <div class="col-xs-offset-3 col-xs-1">
          <a class="com-rposition"  data-toggle="modal" data-target=".bs-example-modal-sm" >
            <i class="fa fa-search module-identif-i"></i>
          </a>
          <img style="width:100px; height:80px;" src="images/card.png"></div>
      </div>
      <div class="modal fade bs-example-modal-sm " id="mymodal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">Close</span>
              </button>
              <h4 class="modal-title">身份证样本</h4>
            </div>
            <div class="modal-body text-center">
              <img  src="images/card.png"></div>
          </div>
          <!-- /.modal-content --> 
        </div>
        <!-- /.modal-dialog --> 
      </div>
      <!-- /.modal -->
      <div class="form-group mt20">
        <div class="col-xs-offset-3 col-xs-9">
          <button type="button" id="identity-realname-btn" class="btn btn-primary p10 frame-nradius">确认</button>
          <button type="reset" class="btn btn-default p10 frame-nradius ">重置</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script>

  function loadCardImage(sourceId){
    if (typeof FileReader === 'undefined') {  
      alert('Your browser does not support FileReader...');  
      return;  
    }  
    var reader = new FileReader();  
    reader.onload = function(e) {   
      $("#card-image").attr("src", this.result);
    }  
    reader.readAsDataURL(document.getElementById(sourceId).files[0]); 
  }

</script>