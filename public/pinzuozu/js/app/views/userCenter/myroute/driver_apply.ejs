<table class="table table-striped">
  <thead>
    <tr>
      <th>出发日期</th>
      <th>线路</th>
      <th>乘客姓名</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% for(var i=0;i<orders.length;i++){ %>

    <tr>
      <td><%= orders[i].line_depart_datetime.substr(0,10) %></td>
      <td>
        <a href="#!driver_detail&id=<%=orders[i].pzz_line_id%>" onFocus="this.blur()">
        <%= orders[i].line_depart_city %>：<%= orders[i].line_depart_address %>
          -><%= orders[i].line_dest_city %>：<%= orders[i].line_dest_address %>
        </a>
      </td>
      <td><%= orders[i].passenger_nickname %></td>
      <td>
        <% if(orders[i].order_status=='confirmed'){ %>
          <a>已同意</a>
        <% }else{ %>
          <a class="driver-confirm-apply" href="javascript:void(0)" id="driver-confirm-apply_<%=orders[i].id%>" onFocus="this.blur()">同意</a>
          <a class="driver-cancel-apply ml10 cancelOrder" href="javascript:void(0)" id="driver-cancel-apply_<%=orders[i].id%>" onFocus="this.blur()">拒绝</a>
        <% } %>
      </td>
    </tr>
    
    <% } %>
  </tbody>
</table>