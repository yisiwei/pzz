<div class="modal fade" id="modal-sign-in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title text-center" id="myModalLabel">Sign in</h4>
      </div>
      <%= form_for :user, url: user_session_path, remote: true, :authenticity_token => true,  html: { id: "new-session" } do |f| %>
      <div class="modal-body text-center">
          <p class="alert"></p>
          <div class="form-group">
            <div class="input-group" >
              <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "username" %>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group" >
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "password" %>
              </div>
          </div>
          <div class="form-group">
            <div class="input-group" >
                <%= f.check_box :remember_me %><%= f.label :remember_me, class: "inset devise-label" %>
              </div>
          </div>
      </div>

      <div class="modal-footer" align="center">
          <button type="button" class="sign-up btn btn-default text-center" style="float: left">Sign up</button>
          <div class="form-group">
              <button type="button" class="btn btn-default text-center" data-dismiss="modal">close</button>
              <%= f.submit "Sign in", class: "btn btn-primary", id: "btn-sign-in" %>
              <!-- <input type="reset"  value="Reset" class="btn btn-primary"> -->
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
